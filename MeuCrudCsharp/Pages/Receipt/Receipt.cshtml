@page
@model ReceiptModel
@{
    ViewData["Title"] = "Pagamento Aprovado!";
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>

<style>
    /* Reset e Estilos Globais */
    body {
        background-color: #f4f7f6; /* Um fundo suave para destacar o cartão */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* Container principal que centraliza o conteúdo */
    .page-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem 1rem;
    }

    /* Estilo do Cartão de Comprovante */
    .receipt-card {
        background-color: #fff;
        max-width: 700px;
        width: 100%;
        margin: 2rem auto;
        border-radius: 12px;
        box-shadow: 0 8px 30px rgba(0,0,0,0.08);
        overflow: hidden; /* Garante que os cantos arredondados sejam aplicados */
    }

    /* Cabeçalho de Sucesso */
    .success-header {
        background-color: #28a745; /* Verde para sucesso */
        color: #fff;
        text-align: center;
        padding: 2.5rem 1.5rem;
    }

        .success-header .icon {
            font-size: 4rem;
            line-height: 1;
            margin-bottom: 1rem;
        }

        .success-header h1 {
            margin: 0;
            font-size: 2.2rem;
            font-weight: 600;
        }

    /* Corpo do Comprovante */
    .receipt-body {
        padding: 2.5rem;
    }

    /* Selo de Assinante Premium */
    .premium-badge {
        background-color: #eaf6ff;
        color: #0056b3;
        border: 1px solid #b8dfff;
        border-radius: 50px;
        padding: 0.75rem 1.5rem;
        text-align: center;
        margin-bottom: 2.5rem;
    }

        .premium-badge h3 {
            margin: 0;
            font-size: 1.2rem;
            font-weight: 600;
        }

        .premium-badge i {
            margin-right: 0.5rem;
            color: #ffc107; /* Cor de estrela/ouro */
        }


    /* Detalhes da Transação */
    .receipt-details h4 {
        font-size: 1.1rem;
        color: #333;
        border-bottom: 2px solid #eee;
        padding-bottom: 0.5rem;
        margin-top: 1.5rem;
        margin-bottom: 1rem;
    }

    .receipt-details p {
        display: flex;
        justify-content: space-between;
        margin: 0.8rem 0;
        font-size: 1rem;
        color: #555;
    }

    .receipt-details strong {
        color: #333;
        font-weight: 600;
    }

    /* Área de Ações (Botões) */
    .receipt-actions {
        text-align: center;
        padding: 1.5rem 2.5rem 2.5rem;
        border-top: 1px solid #eee;
        margin-top: 2rem;
    }

        .receipt-actions .primary-action-text {
            margin-bottom: 1rem;
            font-size: 1.1rem;
            color: #333;
        }

        .receipt-actions .btn {
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease-in-out;
            text-decoration: none;
            display: inline-block;
            margin: 0.5rem;
        }

    .btn-primary {
        background-color: #007bff; /* Azul para ação primária */
        color: #fff;
        font-size: 1.2rem; /* Botão principal maior */
        padding: 0.9rem 2rem;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0, 123, 255, 0.3);
        }

    .btn-secondary {
        background-color: #f0f0f0;
        color: #555;
        border: 1px solid #ddd;
    }

        .btn-secondary:hover {
            background-color: #e2e6ea;
            border-color: #ccc;
        }

    /* Regra para não mostrar os botões na impressão */
    @@media print {
        body {
            background-color: #fff;
        }

        .page-container {
            padding: 0;
        }

        .receipt-card {
            box-shadow: none;
            border: 1px solid #ddd;
            margin: 0;
            max-width: 100%;
        }

        .receipt-actions {
            display: none;
        }
    }
</style>

<div class="page-container">
    <div id="receipt-content-wrapper" class="receipt-card">

        <div class="success-header">
            <div class="icon"><i class="fa-solid fa-circle-check"></i></div>
            <h1>Pagamento Aprovado!</h1>
            <p>Sua compra foi concluída com sucesso.</p>
        </div>

        <div class="receipt-body">

            <div class="premium-badge">
                <h3><i class="fa-solid fa-star"></i>Parabéns! Agora você é um Assinante Premium.</h3>
            </div>

            <h4>Resumo da Sua Compra</h4>
            <div class="receipt-details">
                <p><strong>ID do Pagamento:</strong> <span>@Model.Receipt.PaymentId</span></p>
                <p><strong>Data e Hora:</strong> <span>@Model.Receipt.PaymentDate.ToString("g")</span></p>
                <p><strong>Valor Total:</strong> <span>@Model.Receipt.Amount.ToString("C")</span></p>
                <p><strong>Método:</strong> <span>@Model.Receipt.PaymentMethod</span></p>
            </div>

            <h4>Dados do Pagador</h4>
            <div class="receipt-details">
                <p><strong>Nome:</strong> <span>@Model.Receipt.CustomerName</span></p>
                <p><strong>CPF:</strong> <span>@Model.Receipt.CustomerCpf</span></p>
            </div>

            <h4>Vendido por</h4>
            <div class="receipt-details">
                <p><strong>Empresa:</strong> <span>@Model.Receipt.CompanyName</span></p>
                <p><strong>CNPJ:</strong> <span>@Model.Receipt.CompanyCnpj</span></p>
            </div>
        </div>

        <div class="receipt-actions">
            <p class="primary-action-text">Tudo pronto para começar a aprender?</p>

            <a href="/Courses/index" class="btn btn-primary">
                <i class="fa-solid fa-graduation-cap"></i> Acessar meus Cursos
            </a>

            <hr style="margin: 2rem 0; border: 0; border-top: 1px solid #eee;">

            <div>
                <button id="download-btn" class="btn btn-secondary">
                    <i class="fa-solid fa-download"></i> Baixar (PDF)
                </button>
                <button onclick="window.print()" class="btn btn-secondary">
                    <i class="fa-solid fa-print"></i> Imprimir
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('download-btn').addEventListener('click', function () {
        const element = document.getElementById('receipt-content-wrapper');

        // O Razor irá substituir @Model.Receipt.PaymentId pelo valor real.
        const fileName = 'comprovante_pagamento_@Model.Receipt.PaymentId';

        const opt = {
            margin:       0.5,
            filename:     fileName,
            image:        { type: 'jpeg', quality: 0.98 },
            html2canvas:  { scale: 2 },
            jsPDF:        { unit: 'in', format: 'letter', orientation: 'portrait' }
        };

        // Clona o elemento para remover os botões antes de gerar o PDF
        const elementToPrint = element.cloneNode(true);
        elementToPrint.querySelector('.receipt-actions').remove();

        // Gera e baixa o PDF a partir do elemento clonado e modificado
        html2pdf().from(elementToPrint).set(opt).save();
    });
</script>