@page
@model MeuCrudCsharp.Pages.Payment.Subscription.indexModel
@{
    ViewData["Title"] = "Nossos Planos";
}

<!-- Dependências -->
<link rel="stylesheet" href="~/css/plan/index.css" asp-append-version="true" />

<div class="plans-container">
    <div class="plans-header">
        <h1>Escolha o plano ideal para você</h1>
        <p>Acesso ilimitado a todos os cursos, com novos vídeos toda semana.</p>
    </div>

    <!-- MUDANÇA: O contêiner agora está vazio e tem um ID -->
    <div class="plans-grid" id="plans-grid-container">
        <!-- O JavaScript irá inserir os cards dos planos aqui -->
        <div class="loader" id="plans-loader">
            <i class="fas fa-spinner fa-spin"></i> Carregando planos...
        </div>
    </div>
</div>

<!-- MUDANÇA: Adicionando o script JS no final da página -->
<script src="~/js/plan/plans-main.js" asp-append-version="true" defer type="module"></script>