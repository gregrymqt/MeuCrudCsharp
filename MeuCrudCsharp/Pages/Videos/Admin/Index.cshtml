@page
@model MeuCrudCsharp.Pages.Videos.Admin.IndexModel
@{
    ViewData["Title"] = "Gerenciar Vídeos";
}

<!-- 1. Dependências -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
<link rel="stylesheet" href="~/css/Admin/Videos/index.css" asp-append-version="true"/>

<!-- 2. Estrutura HTML Principal -->
<div class="admin-layout">

    <!--SIDEBAR -->
    <partial name="partials/_AdminSideBar"/>

    <!--   CONTEÚDO PRINCIPAL    -->
    <main class="admin-main-content">
        <!-- Cabeçalho visível apenas no mobile -->
        <partial name="partials/_HeaderMobile"/>

        <div class="admin-container">
            <!-- PAINEL 1: CADASTRAR VÍDEO-->
            <partial name="partials/_CreateVideo"/>

            <!-- PAINEL 2: GERENCIAR CONTEÚDO-->
            <partial name="partials/_ManagerContent"/>

            <!-- PAINEL 3: ASSISTIR VÍDEO -->
            <partial name="partials/_ViewVideo"/>

            <!-- PAINEL 4: CRIAR CURSO-->
            <partial name="partials/_CreateCourse"/>
        </div>
    </main>
</div>

<script src="https://cdn.jsdelivr.net/npm/hls.js@latest"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script src="~/js/admin/videos/videos-main.js" type="module" asp-append-version="true" defer></script>