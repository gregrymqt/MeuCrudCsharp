@{
    // Obtém o nome da página atual, limpa e formata para ser uma classe CSS
    var pageName = ViewContext.RouteData.Values["page"]?.ToString() ?? "index";
    var pageClass = pageName.TrimStart('/').Replace('/', '-').ToLower();
    if (string.IsNullOrEmpty(pageClass))
    {
        pageClass = "index"; // Garante que a home page tenha a classe 'index'
    }
}
<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - SeuCurso</title>

    <link rel="icon" type="image/x-icon" href="~/favicon.ico">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
          integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ=="
          crossorigin="anonymous" referrerpolicy="no-referrer"/>


    <link rel="stylesheet" href="~/css/layout/index.css" asp-append-version="true"/>
</head>
<body class="page-@pageClass">
<header class="site-header">
    <nav class="main-nav container">
        <a class="nav-logo" asp-page="/Index">
            <i class="fas fa-graduation-cap"></i>
            <span>SeuCurso</span>
        </a>

        <div class="nav-center-right">
            <div class="nav-menu" id="nav-menu">
                <ul class="nav-links">
                    <li><a class="nav-link" asp-page="/Index">Home</a></li>
                    <li><a class="nav-link" asp-page="/Courses/Index">Cursos</a></li>
                    <li><a class="nav-link" asp-page="/About/Me">Sobre</a></li>
                    <li><a class="nav-link" asp-page="/Contact">Contato</a></li>
                </ul>
                <div class="nav-user">
                    <partial name="_LoginPartial"/>
                </div>
            </div>
        </div>

        <button class="nav-toggle" id="nav-toggle" aria-label="Toggle navigation">
            <i class="fas fa-bars"></i>
        </button>
    </nav>
</header>

<div class="container main-container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<!-- =================================================================
     NOVO FOOTER
================================================================== -->
<footer class="site-footer">
    <div class="container footer-grid">
        <div class="footer-about">
            <h3 class="footer-logo">
                <i class="fas fa-graduation-cap"></i>
                <span>SeuCurso</span>
            </h3>
            <p>Transformando conhecimento em sucesso. A melhor plataforma para você aprender e crescer
                profissionalmente.</p>
        </div>

        <div class="footer-links">
            <h4>Navegação</h4>
            <ul>
                <li><a asp-page="/Course/Index">Cursos</a></li>
                <li><a asp-page="/About">Sobre Nós</a></li>
                <li><a asp-page="/Contact">Contato</a></li>
                <li><a asp-page="/Faq">FAQ</a></li>
            </ul>
        </div>

        <div class="footer-links">
            <h4>Legal</h4>
            <ul>
                <li><a asp-page="/Privacy">Política de Privacidade</a></li>
                <li><a asp-page="/Terms">Termos de Uso</a></li>
            </ul>
        </div>

        <div class="footer-social">
            <h4>Siga-nos</h4>
            <div class="social-icons">
                <a href="#" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
                <a href="#" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                <a href="#" aria-label="LinkedIn"><i class="fab fa-linkedin-in"></i></a>
                <a href="#" aria-label="YouTube"><i class="fab fa-youtube"></i></a>
            </div>
        </div>
    </div>
    <div class="footer-bottom">
        <div class="container">
            &copy; @DateTime.Now.Year - SeuCurso. Todos os direitos reservados.
        </div>
    </div>
</footer>

<script src="~/js/layout.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>