@page
@model PixModel 
@{
    // O ViewData pode ser definido na Index principal se a partial for renderizada lรก
    ViewData["Title"] = "Pagamento PIX";
}

<div id="pix-payment-module" class="pix-container">
    <header class="pix-header">
        <h1>Pagamento com PIX</h1>
        <p>Plano: <strong>@Model.ViewModel.Description</strong> | Valor: <strong>@Model.ViewModel.TransactionAmount.ToString("C")</strong></p>
    </header>
    <nav class="payment-tabs-nav">
        <a href="#" class="tab-link active" data-step="1">1. Seus Dados</a>
        <a href="#" class="tab-link disabled" data-step="2">2. Pagar</a>
        <a href="#" class="tab-link disabled" data-step="3">3. Status</a>
    </nav>
    <div id="pix-content-container" class="tabs-content">
    </div>
    <div id="loading-spinner" class="spinner" style="display: none;"></div>
    <div id="form-error" class="error-message" style="display: none;"></div>
</div>

<script id="pix-data" type="application/json">
    @Json.Serialize(Model.ViewModel)
</script>

<script src="https://sdk.mercadopago.com/js/v2"></script>