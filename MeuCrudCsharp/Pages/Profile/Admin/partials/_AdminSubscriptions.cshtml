

    <!-- Seção 1: Seletor de Ação -->
    <div class="panel-section">
        <div class="panel-header">
            <div>
                <h2>Gerenciar Assinaturas</h2>
                <p>Execute ações diretas em uma assinatura específica.</p>
            </div>
        </div>
        <div class="form-container">
            <div class="form-group">
                <label for="subscription-action-selector">Selecione uma Ação</label>
                <select id="subscription-action-selector" class="form-control">
                    <option value="">-- Escolha uma operação --</option>
                    <option value="search">Buscar Assinatura</option>
                    <option value="update-value">Alterar Valor da Mensalidade</option>
                    <option value="pause-cancel">Pausar ou Cancelar</option>
                    <option value="reactivate">Reativar Assinatura Pausada</option>
                </select>
            </div>
        </div>
    </div>

    <!-- Seção 2: Formulários de Ação e Resultados -->
    <div id="subscription-actions-container" class="panel-section">
        <!-- Os formulários serão exibidos aqui com base na seleção -->
        
        <!-- Formulário: Buscar Assinatura -->
        <form id="form-search" class="action-form">
            <div class="form-group">
                <label for="search-id">Buscar por ID da Assinatura ou Email do Aluno</label>
                <div class="input-group">
                    <input type="text" id="search-id" class="form-control" placeholder="ID da assinatura ou email do aluno..." required>
                    <button type="submit" class="btn btn-primary">Buscar</button>
                </div>
            </div>
        </form>
        
        <!-- Formulário: Alterar Valor -->
        <form id="form-update-value" class="action-form">
            <div class="form-grid">
                <div class="form-group">
                    <label for="update-value-id">ID da Assinatura</label>
                    <input type="text" id="update-value-id" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="update-value-amount">Novo Valor (R$)</label>
                    <input type="number" id="update-value-amount" class="form-control" step="0.01" required placeholder="Ex: 99.90">
                </div>
            </div>
            <div class="form-actions">
                 <button type="submit" class="btn btn-warning">Alterar Valor</button>
            </div>
        </form>
        
        <!-- Formulário: Pausar ou Cancelar -->
        <form id="form-pause-cancel" class="action-form">
            <div class="form-group">
                <label for="pause-cancel-id">ID da Assinatura</label>
                <input type="text" id="pause-cancel-id" class="form-control" required>
            </div>
            <div class="form-actions">
                <button type="submit" name="status" value="paused" class="btn btn-secondary">Pausar Assinatura</button>
                <button type="submit" name="status" value="cancelled" class="btn btn-danger">Cancelar Assinatura</button>
            </div>
        </form>
        
        <!-- Formulário: Reativar -->
        <form id="form-reactivate" class="action-form">
            <div class="form-group">
                <label for="reactivate-id">ID da Assinatura (deve estar pausada)</label>
                <input type="text" id="reactivate-id" class="form-control" required>
            </div>
             <div class="form-actions">
                <button type="submit" class="btn btn-success">Reativar Assinatura</button>
            </div>
        </form>

        <!-- Container para exibir os resultados das ações -->
        <div id="action-results-container"></div>
    </div>

