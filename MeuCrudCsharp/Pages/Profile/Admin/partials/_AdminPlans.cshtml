<div class="tabs-container">
    <!-- Navegação das Abas -->
    <nav class="tabs-nav" aria-label="Abas de Planos">
        <button class="tab-link active" data-tab="create-plan" role="tab" aria-selected="true">Criar Novo</button>
        <button class="tab-link" data-tab="manage-plans" role="tab" aria-selected="false">Gerenciar Planos</button>
    </nav>

    <!-- Conteúdo das Abas -->
    <div class="tab-content">
        <!-- Aba 1: Formulário de Criação -->
        <div id="create-plan" class="tab-pane active" role="tabpanel">
            <div class="panel-section">
                <form id="create-plan-form" class="form-container">
                    <div class="panel-header">
                        <h2>Criar Novo Plano de Assinatura</h2>
                    </div>
                    <div class="form-grid">
                        <div class="form-group">
                            <label for="plan-reason">Nome do Plano</label>
                            <input type="text" id="plan-reason" class="form-control"
                                   placeholder="Ex: Acesso Mensal Premium" required>
                        </div>
                        <div class="form-group">
                            <label for="plan-interval">Intervalo da Frequência</label>
                            <input type="number" id="plan-interval" class="form-control" value="1" min="1" required>
                            <small class="form-text text-muted">Ex: 1 para mensal, 3 para trimestral, 12 para
                                anual.</small>
                        </div>
                        <div class="form-group">
                            <label for="plan-frequency-type">Unidade de Tempo</label>
                            <select id="plan-frequency-type" class="form-select">
                                <option value="months" selected>Meses</option>
                                <option value="days">Dias</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="plan-amount">Valor (R$)</label>
                            <input type="number" id="plan-amount" class="form-control" step="0.01"
                                   placeholder="Ex: 49.90" required>
                        </div>
                        <div class="form-group">
                            <label for="plan-description">Descrição do Plano</label>
                            <input type="text" id="plan-description" class="form-control"
                                   placeholder="Ex: Acesso a todos os cursos" required>
                        </div>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Criar Plano</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Aba 2: Tabela de Planos Existentes -->
        <div id="manage-plans" class="tab-pane" role="tabpanel">
            <div class="panel-section">
                <div class="panel-header">
                    <div>
                        <h2>Planos Existentes</h2>
                        <p>Gerencie os planos de assinatura disponíveis.</p>
                    </div>
                    <div id="fetch-buttons" class="button-group">
                        <button id="fetch-db-btn" class="btn btn-secondary">Buscar Localmente</button>
                        <button id="fetch-api-btn" class="btn btn-primary">Buscar da API</button>
                    </div>
                </div>
                <div class="table-wrapper">
                    <table class="data-table">
                        <thead>
                        <tr>
                            <th>Nome do Plano</th>
                            <th>Tipo</th>
                            <th>Valor</th>
                            <th>Status</th>
                            <th class="text-right">Ações</th>
                        </tr>
                        </thead>
                        <tbody id="plans-table-body">
                        <!-- Exemplo de como o JS deve renderizar a linha -->
                        <tr>
                            <td data-label="Nome do Plano">Acesso Premium</td>
                            <td data-label="Tipo">Mensal</td>
                            <td data-label="Valor">R$ 49.90</td>
                            <td data-label="Status">Ativo</td>
                            <td data-label="Ações" class="text-right">
                                <!-- Botões aqui -->
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div id="plans-pagination" class="pagination-container">
                    <button id="plans-prev-page-btn" class="btn btn-secondary" disabled>Anterior</button>
                    <span class="pagination-info">
                        Página <span id="plans-current-page">1</span> de <span id="plans-total-pages">1</span>
                    </span>
                    <button id="plans-next-page-btn" class="btn btn-secondary" disabled>Próximo</button>
                </div>
            </div>
        </div>
    </div>
</div>
