@model MeuCrudCsharp.Features.Emails.ViewModels.RefundConfirmationEmailViewModel

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Seu Reembolso foi Aprovado!</title>
</head>
<body style="margin: 0; padding: 0; background-color: #f4f4f4; font-family: Arial, sans-serif;">

    <span style="display: none; font-size: 1px; color: #f4f4f4; line-height: 1px; max-height: 0px; max-width: 0px; opacity: 0; overflow: hidden;">
        Ótima notícia! O valor será estornado em sua fatura em breve.
    </span>

    <table align="center" border="0" cellpadding="0" cellspacing="0" width="100%" style="border-collapse: collapse;">
        <tr>
            <td align="center" style="padding: 20px 0;">
                <table align="center" border="0" cellpadding="0" cellspacing="0" width="600" style="border-collapse: collapse; border: 1px solid #cccccc; background-color: #ffffff; max-width: 600px;">

                    <tr>
                        <td align="center" style="padding: 30px 0; background-color: #0056b3; color: #ffffff;">
                            <img src="https://via.placeholder.com/150x50.png?text=SuaLogo" alt="Logo da Empresa" width="150" style="display: block;" />
                        </td>
                    </tr>

                    <tr>
                        <td style="padding: 40px 30px;">
                            <h1 style="color: #333333; font-size: 24px; margin: 0 0 20px 0;">Reembolso Confirmado! 🎉</h1>

                            <p style="color: #555555; font-size: 16px; line-height: 1.5; margin: 0 0 15px 0;">
                                Olá, <strong>@Model.UserName</strong>,
                            </p>

                            <p style="color: #555555; font-size: 16px; line-height: 1.5; margin: 0 0 25px 0;">
                                Ótima notícia! A sua solicitação de reembolso foi processada com sucesso. O valor referente à sua compra será estornado diretamente na fatura do seu cartão de crédito.
                            </p>

                            <table border="0" cellpadding="0" cellspacing="0" width="100%" style="border-collapse: collapse; background-color: #f9f9f9; border: 1px solid #eeeeee; border-radius: 5px; margin-bottom: 25px;">
                                <tr>
                                    <td style="padding: 20px;">
                                        <p style="color: #333333; font-size: 16px; line-height: 1.5; margin: 0;">
                                            <strong>ID do Pagamento:</strong> @Model.PaymentId <br>
                                            <strong>Data da Confirmação:</strong> @Model.ConfirmationDate.ToString("dd 'de' MMMM 'de' yyyy") <br>
                                            <strong>Status:</strong> <span style="color: #28a745; font-weight: bold;">Reembolsado</span>
                                        </p>
                                    </td>
                                </tr>
                            </table>

                            <h2 style="color: #333333; font-size: 20px; margin: 0 0 10px 0;">Próximos Passos</h2>
                            <p style="color: #555555; font-size: 16px; line-height: 1.5; margin: 0 0 30px 0;">
                                O prazo para que o valor apareça na sua fatura é de <strong>5 a 10 dias úteis</strong>, dependendo da operadora do seu cartão. Fique de olho nos seus próximos extratos.
                            </p>

                            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                <tr>
                                    <td align="center">
                                        <a href="@Model.AccountUrl" target="_blank" style="display: inline-block; padding: 12px 25px; background-color: #007bff; color: #ffffff; text-decoration: none; border-radius: 5px; font-size: 16px; font-weight: bold;">
                                            Acessar Minha Conta
                                        </a>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>

                    <tr>
                        <td style="padding: 20px 30px; background-color: #eeeeee;">
                            <p style="color: #888888; font-size: 12px; text-align: center; margin: 0;">
                                Se você tiver qualquer dúvida, basta responder a este e-mail ou entrar em contato com nosso suporte.
                                <br><br>
                                © @DateTime.Now.Year Nome da Sua Empresa. Todos os direitos reservados.
                                <br>
                                Seu Endereço, Cidade, Estado
                            </p>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>

</body>
</html>