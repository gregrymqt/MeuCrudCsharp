@using System.Globalization

@model MeuCrudCsharp.Features.Emails.ViewModels.RenewalEmailViewModel

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Assinatura Renovada com Sucesso!</title>
    <style>
        /* CSS Reset & Email Client Fixes */
        body, table, td, a { -webkit-text-size-adjust: 100%; -ms-text-size-adjust: 100%; }
        table, td { mso-table-lspace: 0pt; mso-table-rspace: 0pt; border-collapse: collapse; }
        img { -ms-interpolation-mode: bicubic; border: 0; height: auto; line-height: 100%; outline: none; text-decoration: none; }
        body { height: 100% !important; margin: 0 !important; padding: 0 !important; width: 100% !important; font-family: Helvetica, Arial, sans-serif; }

        /* Estilos Globais */
        .email-background {
            background-color: #f4f4f4;
        }

        .email-container {
            background-color: #ffffff;
            max-width: 600px;
            margin: 0 auto;
            border-radius: 8px;
            overflow: hidden;
        }

        .header {
            background-color: #007bff;
            padding: 30px 20px;
            text-align: center;
            color: #ffffff;
        }
        
        .header h1 {
            margin: 0;
            font-size: 28px;
            font-weight: bold;
        }

        .content {
            padding: 30px 25px;
            color: #333333;
            font-size: 16px;
            line-height: 1.6;
        }

        .content p {
            margin: 0 0 15px 0;
        }

        .details-box {
            background-color: #f9f9f9;
            border-left: 4px solid #007bff;
            padding: 20px;
            margin: 20px 0;
        }

        .details-box p {
            margin: 5px 0;
        }

        .cta-button {
            display: inline-block;
            background-color: #28a745;
            color: #ffffff;
            padding: 12px 25px;
            text-align: center;
            text-decoration: none;
            border-radius: 5px;
            font-weight: bold;
            margin-top: 15px;
        }
        
        .footer {
            padding: 20px;
            text-align: center;
            font-size: 12px;
            color: #888888;
        }

        .footer a {
            color: #007bff;
            text-decoration: none;
        }
    </style>
</head>
<body class="email-background">
    <table role="presentation" border="0" cellpadding="0" cellspacing="0" width="100%">
        <tr>
            <td align="center" style="padding: 20px 0;">
                <table role="presentation" class="email-container" border="0" cellpadding="0" cellspacing="0" width="100%">
                    <tr>
                        <td class="header">
                            <h1>Pagamento Confirmado!</h1>
                        </td>
                    </tr>
                    <tr>
                        <td class="content">
                            <p>Olá, @Model.UserName,</p>
                            <p>Agradecemos por continuar conosco! Recebemos o pagamento da sua assinatura e seu acesso foi renovado com sucesso.</p>

                            <div class="details-box">
                                <p><strong>Plano:</strong> @Model.PlanName</p>
                                <p><strong>Valor Pago:</strong> @Model.TransactionAmount.ToString("C", new CultureInfo("pt-BR"))</p>
                                <p><strong>Seu acesso está garantido até:</strong> @Model.NewExpirationDate.ToString("dd 'de' MMMM 'de' yyyy")</p>
                            </div>

                            <p>Você não precisa fazer mais nada. Continue aproveitando todos os benefícios da nossa plataforma!</p>
                            
                            <table role="presentation" border="0" cellpadding="0" cellspacing="0" width="100%">
                                <tr>
                                    <td align="center" style="padding-top: 10px;">
                                        <a href="@Model.AccountUrl" target="_blank" class="cta-button">Acessar minha conta</a>
                                    </td>
                                </tr>
                            </table>
                            
                            <p style="margin-top: 30px;">Se tiver qualquer dúvida, basta entrar em contato com nosso <a href="@Model.SupportUrl">suporte</a>.</p>
                            <p>Obrigado,<br>A Equipe da SuaEmpresa</p>
                        </td>
                    </tr>
                    <tr>
                        <td class="footer">
                            <p>Você está recebendo este e-mail porque é um assinante ativo da SuaEmpresa.</p>
                            <p>SuaEmpresa &copy; @DateTime.Now.Year. Todos os direitos reservados.</p>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>

    </body>
</html>