@page
@model MeuCrudCsharp.Pages.Account.LoginSuccessModel
@{
    ViewData["Title"] = "Login Bem-Sucedido";
}

@* Estilos para a página de sucesso. Ficam aqui para serem auto-contidos. *@
<style>
    .success-container {
        text-align: center;
        padding-top: 50px;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    }

    .success-checkmark {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        display: block;
        stroke-width: 2;
        stroke: #fff;
        stroke-miterlimit: 10;
        margin: 10% auto;
        box-shadow: inset 0px 0px 0px #4bb71b;
        animation: fill .4s ease-in-out .4s forwards, scale .3s ease-in-out .9s both;
    }

    .success-checkmark__circle {
        stroke-dasharray: 166;
        stroke-dashoffset: 166;
        stroke-width: 2;
        stroke-miterlimit: 10;
        stroke: #4bb71b;
        fill: none;
        animation: stroke .6s cubic-bezier(0.65, 0, 0.45, 1) forwards;
    }

    .success-checkmark__check {
        transform-origin: 50% 50%;
        stroke-dasharray: 48;
        stroke-dashoffset: 48;
        animation: stroke .3s cubic-bezier(0.65, 0, 0.45, 1) .8s forwards;
    }

    @@keyframes stroke {
        100% {
            stroke-dashoffset: 0
        }
    }

    @@keyframes scale {
        0%, 100% {
            transform: none
        }
        50% {
            transform: scale3d(1.1, 1.1, 1)
        }
    }

    @@keyframes fill {
        100% {
            box-shadow: inset 0px 0px 0px 60px #4bb71b
        }
    }

    .message-title {
        color: #333;
        font-size: 2em;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .message-text {
        color: #555;
        font-size: 1.2em;
    }

    .message-text #countdown {
        font-weight: bold;
        color: #000;
    }

    .fallback-link-container {
        margin-top: 40px;
        font-size: 0.9em;
        color: #888;
    }

    .fallback-link-container a {
        color: #007bff;
        text-decoration: none;
    }
</style>

<div class="success-container">
    @* Ícone de checkmark animado *@
    <svg class="success-checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52">
        <circle class="success-checkmark__circle" cx="26" cy="26" r="25" fill="none" />
        <path class="success-checkmark__check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8" />
    </svg>

    <h1 class="message-title">Login bem-sucedido!</h1>
    <p class="message-text">
        Estamos preparando tudo para você. Redirecionando para o seu perfil em 
        <span id="countdown">5</span> segundos...
    </p>

    <div class="fallback-link-container">
        <p>
            Não foi redirecionado? 
            <a id="redirectLink" href="@Model.ReturnUrl">Clique aqui para continuar.</a>
        </p>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            // Pega a URL de retorno dos parâmetros ou define um padrão seguro.
            const returnUrl = new URLSearchParams(window.location.search).get('ReturnUrl') || "/";
            
            // Define o link de fallback para o caso de o script falhar.
            document.getElementById('redirectLink').href = returnUrl;

            // Lógica do contador regressivo
            let countdownElement = document.getElementById('countdown');
            let seconds = 5;

            const interval = setInterval(() => {
                seconds--;
                countdownElement.textContent = seconds;

                if (seconds <= 0) {
                    clearInterval(interval); // Para o contador
                    window.location.href = returnUrl; // Redireciona o usuário
                }
            }, 1000); // Executa a cada 1 segundo
        })();
    </script>
}